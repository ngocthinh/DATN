<div class="col-md-10">
<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#home">All users</a></li>
  <li><a data-toggle="tab" href="#menu1">Categories of User</a></li>
  <li><a data-toggle="tab" href="#menu2">Certificaions</a></li>
</ul>

<div class="tab-content">
  <div id="home" class="tab-pane fade in active">
    <h3>All User</h3>
    <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %><%= " (admin)" if user.has_role? :admin %></td>
        <td><%= user.email %></td>
        <td></td>
      </tr>
     <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
  </div>
  <div id="menu1" class="tab-pane fade">
    <h3>All Techniques of users </h3>
    <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td id="category-name-<%= category.id %>"><label><%= category.name %></label></td>
        <td><%= link_to t(".see_techniques"), "javascript:;", data: {id: category.id},
          class: "btn btn-default techniques-of-category right" %>
            <%= link_to t(".edit"), "javascript:;", data: {id: category.id},
          class: "btn btn-default edit-category right" %>

          <%= link_to t(".delete"), "javascript:;", data: {id: category.id},
          class: "btn btn-default delete-category right" %>

          </td>
          <td id="techniques-all-<%= category.id %>"></td>
          <br>

      </tr>
     <% end %>
    </tbody>
  </table>
  <%= paginate @categories %>
  </div>
  <div id="menu2" class="tab-pane fade">
    <h3>All Certifications</h3>
    <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @certifications.each do |certification| %>
      <tr>
        <td><%= certification.name %></td>
        <td><%= certification.description %></td>
        <td></td>
      </tr>
     <% end %>
    </tbody>
  </table>
  <%= paginate @certifications %>
  </div>
</div>
</div>

<div class="modal fade" role="dialog" id="edit-user-modal">
  <div class="modal-dialog modal-lg">
    <div class="modal-body">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel"><%= "modal_title" %></h4>
        </div>
        <div class="modal-body" id="show-edit-user-form">
        </div>
      </div>
    </div>
  </div>
</div>