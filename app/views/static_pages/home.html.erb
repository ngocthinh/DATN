<section id="slider">
  <div id="home-carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag @home.images.first.image.url, class: "resize-slide" %>
        <div class="carousel-caption container">
          <div class="row">
            <div class="col-sm-7">
              <h2 id = "home-title"><%= @home.title %></h2>
              <h3 id = "home-sologan"><%= @home.sologan %></h3>
              <p id = "home-description"><%= @home.description %></p>
            </div>
          </div>
        </div>
      </div>
      <% @home.images[Settings.array_image.second..Settings.array_image.last]
        .each do |image, i| %>
        <div class="item">
          <%= image_tag image.image.url, class: "resize-slide" %>
          <div class="carousel-caption container">
            <div class="row">
              <div class="col-sm-7">
                <h2 id = "home-title"><%= @home.title %></h2>
                <h3 id= "home-sologan"><%= @home.sologan %></h3>
                <p id = "home-description"><%= @home.description %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <a class="home-carousel-left" href="#home-carousel" data-slide="prev">
        <i class="fa fa-angle-left"></i>
      </a>
      <a class="home-carousel-right" href="#home-carousel" data-slide="next">
        <i class="fa fa-angle-right"></i>
      </a>
    </div>
  </div>
</section>
<section id="our-works">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title">
          <h1 class="font-family"><%= t "manage.our_project" %></h1>
          <span class="st-border"></span>
        </div>
      </div>
      <div class="portfolio-wrapper" >
        <div class="portfolio-items">
        <%= render "list_project" %>
        </div>
      </div>
    </div>
    <%= link_to t("read_more"), projects_path, class: "btn btn-send margin-45" %>
  </div>
</section>
<section id="about-us">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <div class="about-us text-center">
          <h4><%= t "question.title_1" %><br/><%= t "question.title_2" %></h4>
          <p>
            <%= t "question.description" %>
          </p>
          <hr />
        </div>
      </div>
      <div class="col-sm-6 our-office">
        <div id="office-carousel" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="item active resize-culture">
              <%= image_tag "/assets/cultural/vanhoa-2.jpg" %>
            </div>
            <div class="item resize-culture">
              <%= image_tag "/assets/cultural/vanhoa-2.jpg" %>
            </div>
            <div class="item resize-culture">
              <%= image_tag "/assets/cultural/vanhoa-2.jpg" %>
            </div>
            <div class="item resize-culture">
              <%= image_tag "/assets/cultural/vanhoa-2.jpg" %>
            </div>
            <div class="item resize-culture">
              <%= image_tag "/assets/cultural/vanhoa-2.jpg" %>
            </div>
            <a class="office-carousel-left" href="#office-carousel" data-slide="prev">
              <i class="fa fa-angle-left"></i>
            </a>
            <a class="office-carousel-right" href="#office-carousel" data-slide="next">
              <i class="fa fa-angle-right"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="introduce-team">
  <div class="container">
    <div class="row">
      <div class="overlay"></div>
      <div class="col-md-8 col-md-offset-2 col-sm-12">
        <div class="st-introduce-teams">
          <div id="fade-quote-carousel" class="carousel slide owl-wrapper" data-ride="carousel" data-interval="3000">
            <ol class="carousel-indicators">
              <li data-target="#fade-quote-carousel" data-slide-to="0" class = "active"></li>
              <% @users.each do |user| %>
                <li data-target="#fade-quote-carousel" data-slide-to="<%= user.id+1 %>"></li>
              <% end %>
            </ol>
            <div class="carousel-inner">
              <div class="active item">
              <%= image_tag @users.first.avatar.url, class: "profile-circle left member1" %>
                <blockquote>
                  <p><%= @users.first.biography %></p>
                <div class="st-border"></div>
                <h5><%= @users.first.name %></h5>
                <div class="client-info">
                  <span><% @users.first.techniques.each do |technique| %>
                     -<%= technique. skill %> -
                    <% end %>
                  </span>
                </div>
                </blockquote>
                <div class="clear"></div>
              </div>
              <% @users[1..-1].each do |user| %>
                <div class="item">
                  <%= image_tag user.avatar.url, class: "profile-circle left member1" %>
                  <blockquote>
                    <p><%= user.biography %></p>
                  <div class="st-border"></div>
                    <h5><%= user.name %></h5>
                  <div class="client-info text-center">
                    <span><% user.techniques.each do |technique| %>
                     -<%= technique. skill %>-
                    <% end %></span>
                  </div>
                  </blockquote>
                </div>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</section>
<section id="fun-facts">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-md-4">
        <div class="fun-fact text-center">
          <h3>
            <i class="fa fa-thumbs-o-up"></i>
            <span class="st-counter"><%= User.count %></span>
          </h3>
          <p><%= t "employee" %></p>
        </div>
      </div>
      <div class="col-sm-4 col-md-4">
        <div class="fun-fact text-center">
          <h3><i class="fa fa-briefcase fa-6"></i> <span class="st-counter"><%= Project.count %></span></h3>
          <p><%= t "complete_project" %></p>
        </div>
      </div>
      
      <div class="col-sm-4 col-md-4">
        <div class="fun-fact text-center">
          <h3><i class="fa fa-coffee"></i> <span class="st-counter"><%= Post.blog.count %></span></h3>
          <p><%= t "blogs.name" %></p>
        </div>
      </div>
    </div>
  </div>
</section>
